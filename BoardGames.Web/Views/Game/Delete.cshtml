@model GameVM

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Game</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<input asp-for="Game.Id" hidden />

			<div class="p-3">
				<div class="form-floating py-1 col-12">
					<input asp-for="Game.Name" readonly class="form-control border shadow" />
					<label asp-for="Game.Name" class="ms-2"></label>
					<span asp-validation-for="Game.Name" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<select asp-for="@Model.Game.CategoryId" disabled asp-items="@Model.CategoryList" class="form-select border shadow">
						<option disabled selected>--Select Category</option>
					</select>
					<label asp-for="Game.CategoryId" class="ms-2"></label>
					<span asp-validation-for="Game.CategoryId" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Game.PlayerNumber" disabled class="form-control border shadow" />
					<label asp-for="Game.PlayerNumber" class="ms-2"></label>
					<span asp-validation-for="Game.PlayerNumber" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Game.Description" disabled class="form-control border shadow" />
					<label asp-for="Game.Description" class="ms-2"></label>
					<span asp-validation-for="Game.Description" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Game.ImageUrl" disabled class="form-control border shadow" />
					<label asp-for="Game.ImageUrl" class="ms-2"></label>
					<span asp-validation-for="Game.ImageUrl" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Game.Additional" disabled class="form-control border shadow" />
					<label asp-for="Game.Additional" class="ms-2"></label>
					<span asp-validation-for="Game.Additional" class="text-danger"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger w-100">
							<i class="bi bi-trash-fill"></i> Delete
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-action="Index" class="btn btn-secondary w-100">
							<i class="bi bi-x-circle"></i> Cancel
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
