@model IEnumerable<Game>

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Game List</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<div class="row pb-3">
			<div class="col-6 offset-6 text-end">
				<a asp-controller="Game" asp-action="Create" class="btn btn-secondary">
					<i class="bi bi-plus-circle"></i> Create new Game
				</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th class="col-1">Name</th>
					<th class="col-1">Category</th>
					<th class="col-1">Players</th>
					<th class="col-1">Image</th>
					<th class="col-3">Additional</th>
					<th class="col-4">Description</th>
					<th class="col-2"></th>
				</tr>
			</thead>

			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td>@obj.Name</td>
						<td>@obj.Category.Name</td>
						<td>@obj.PlayerNumber</td>
						<td>@obj.ImageUrl</td>
						<td>@obj.Additional</td>
						<td>@obj.Description</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-action="Update" asp-route-gameId="@obj.Id" class="btn btn-success mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-action="Delete" asp-route-gameId="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash-fill"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>



